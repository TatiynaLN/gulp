                                        img(src="./wp-content/themes/genesis/assets/img/license.jpg" alt="Лицензия" width="316" height="474")
                                    .swiper-slide.slide-lisences--small
                                        img(src="./wp-content/themes/genesis/assets/img/license.jpg" alt="Лицензия" width="316" height="474")
